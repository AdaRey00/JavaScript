//6
function vehicle(color, code, age) {
    while (code === 1) {
        if (age === 0) {
            return console.log("A ", color, "new car");
        }
        else {
            return console.log("A ", color, "used car");
        }
    }
    while (code === 2) {
        if (age === 0) {
            return console.log("A ", color, "new motorbike");
        }
        else {
            return console.log("A ", color, "used motorbike");
        }
    }
};

vehicle("blue", 2, 5);
