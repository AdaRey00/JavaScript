//15
let x = [1, 2, 3];
let y = [1, 2, 3];
let z = y;

if (x == y) {
    console.log("True")
}
else {
    console.log("false")
}; //The answer is: false

if (x === y) {
    console.log("True")
}
else {
    console.log("false")
};//The answer is: false

if (z == y) {
    console.log("True")
}
else {
    console.log("false")
};//The answer is: true

if (z == x) {
    console.log("True")
}
else {
    console.log("false")
};//The answer is: false

