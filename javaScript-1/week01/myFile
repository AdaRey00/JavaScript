//Same Type
let Q = 3;
let Z = "foo";
let M = 25;
let N = "Zoo";
console.log("The value of my variable foo is: " + Q);
console.log("The value of my variable foo is: " + Z);
console.log("The value of my variable foo is: " + M);
console.log("The value of my variable foo is: " + N);

console.log(typeof(Q));
console.log(typeof (Z));
console.log(typeof (M));
console.log(typeof (N));

if(typeof(Q)===typeof(Z)){
    console.log("Same Type");
}else{
    console.log("Not Same Type")
};
if (typeof (Q) === typeof (M)) {
    console.log("Same Type");
} else {
    console.log("Not Same Type")
};

